---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "$65 PP | Roatan Tour",
    description:
      "This tour option is a good choice, you can customize it to your liking. Our visit includes a chocolate factory, a rum company, and the Roatan letters for photo opportunities.",
    buttonLabel: "Book Now",
    buttonUrl: "booking",
    imageUrl: "/roatan-letters.webp",
    
  },
  {
    title: "$80 PP | Sanctuary Tour",
    description:
      "Transportation, Visit the sanctuary of sloths, monkeys and macaws, taste of chocolate, rum cake samples photos opportunities.",
    buttonLabel: "Book Now",
    buttonUrl: "booking",
    imageUrl: "/sanctuary.webp",
  },
  {
    title: "$95 PP | Jet ski Tour",
    description:
      "30 minutes on a Jet ski, the tour package comes with an island tour, Chocolate samples, rum cake samples, Roatan sign for photos and a day pass for the beach, along with beach chairs and an umbrella (+$15).",
    buttonLabel: "Book Now",
    buttonUrl: "booking",
    imageUrl: "/jetski.webp",
  },
  {
    title: "$95 PP | ATV 4-Wheeler Tour",
    description:
      "ATV adventure, Chocolate samples, rum cake samples, Roatan sign for photos and picking you up and drop off. Duration 3 - 5 hours.",
    buttonLabel: "Book Now",
    buttonUrl: "booking",
    imageUrl: "/cuatrimoto.webp",
  },
  {
    title: "$95 PP | Zipline Tour",
    description:
      "Zip-Line adventure, taste of chocolate, rum cake samples, and photos oportunity . Duration 3 - 4 hours.",
    buttonLabel: "Book Now",
    buttonUrl: "booking",
    imageUrl: "/zipline.webp",
  },
  {
    title: "$115 PP | Mangrove Tunel and ATV Adventure",
    description:
"ATV adventure to the mangrove tunnel where you can swim at the beach, visit Punta Gorda and explore Garifuna culture, visit a restaurant (optional)",
    buttonLabel: "Book Now",
    buttonUrl: "booking",
    imageUrl: "/mangrove.webp",
  },
];
---

<ContentSection title="Discover Our Tours" id="tours">
  <Fragment slot="lead">
    <span class="text-primary">Explore</span> a wide range of carefully curated
    <span class="text-primary">tours</span>
    to suit your needs and <span class="text-primary">desires</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, buttonLabel, buttonUrl, imageUrl}) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <img src={imageUrl} alt={title} class="max-w-full h-auto rounded-lg" /> {/* Imagen agregada aquí */}
          <p class="text-center font-extrabold text-l">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
          <a href={buttonUrl} class="mt-4 px-6 py-2 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-indigo-700">
        {buttonLabel}
      </a>

        </li>
      ))
    }
  </ul>
</ContentSection>

<a href="/wings-of-hope" style="display: flex; justify-content: center; margin-top: 20px;">
  <img src="/banner 1.jpeg" alt="Descripción del banner" width="970" height="180" />
</a>